@{
    IEnumerable<StudentViewModel> students = ViewData["Students"] as IEnumerable<StudentViewModel>; 
}

<table class="table">    
    <tbody>
@foreach (var stud in students) {
        <tr>
            <td>
                @stud.Surname @stud.Name @stud.Middlename
            </td>
                      
            <td>
                                
                <a asp-action="ShowStudentsProgress" asp-route-studentId="@stud.Id" >Details</a>                 
                
            </td>           
        </tr>
}
    </tbody>
</table>