@using ProcessAuto.Models.ViewModels
@using System.Collections

@{
    ViewData["Title"] = "Vacancy Responds";
}
@*<h1>@ViewData["Title"]</h1>

<p>This page will be avaliable for logged user and will let them edit their resume.</p>*@

